# Node Environment
NODE_ENV=development
PORT=5003
HOST=0.0.0.0

# Firebase Configuration
GOOGLE_CLOUD_PROJECT=equiduty-dev
GOOGLE_APPLICATION_CREDENTIALS=./service-account-dev.json

# Firebase Emulator (for local development)
FIRESTORE_EMULATOR_HOST=localhost:5081
FIREBASE_AUTH_EMULATOR_HOST=localhost:5099

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# JWT Configuration (use strong secrets in production!)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# External APIs (optional)
STRIPE_SECRET_KEY=sk_test_your_key_here
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=your_token_here

# SMTP Configuration (for outgoing emails)
# Note: SMTP via send.one.com is the ONLY supported email provider
# In production, EMAIL_SMTP_PASSWORD is mounted from Secret Manager (dev-smtp-password)
EMAIL_SMTP_SERVER=send.one.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=info@equiduty.se
EMAIL_SMTP_PASSWORD=your_smtp_password_here
EMAIL_SMTP_SECURE=false
