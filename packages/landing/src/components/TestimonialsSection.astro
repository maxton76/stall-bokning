---
import { useTranslations } from '../i18n';

interface Props {
  lang?: string;
}

const { lang = 'sv' } = Astro.props;
const { t } = useTranslations(lang);

const testimonials = ['testimonial1', 'testimonial2', 'testimonial3'];
---

<section id="testimonials" class="py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold mb-4">{t('testimonials.title')}</h2>
      <p class="text-muted-foreground">{t('testimonials.subtitle')}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((key) => (
        <div class="rounded-lg border bg-card text-card-foreground shadow-sm h-full">
          <div class="p-6">
            <div class="flex gap-1 mb-2">
              {[...Array(5)].map(() => (
                <svg class="h-4 w-4 fill-primary text-primary" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                </svg>
              ))}
            </div>
            <h3 class="text-lg font-semibold leading-none tracking-tight mt-3">
              {t(`testimonials.${key}.title`)}
            </h3>
          </div>
          <div class="px-6 pb-6">
            <p class="text-muted-foreground mb-4">
              &ldquo;{t(`testimonials.${key}.content`)}&rdquo;
            </p>
            <div>
              <p class="font-semibold">{t(`testimonials.${key}.author`)}</p>
              <p class="text-sm text-muted-foreground">{t(`testimonials.${key}.role`)}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
