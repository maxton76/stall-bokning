  { key: 'shifts', icon: 'calendar' },
  { key: 'horses', icon: 'heart' },
  { key: 'feeding', icon: 'utensils' },
  { key: 'activities', icon: 'activity' },
  { key: 'notifications', icon: 'bell' },
  { key: 'organizations', icon: 'building' },
  { key: 'reporting', icon: 'pie-chart' },
  { key: 'assistant', icon: 'bot' },
];

