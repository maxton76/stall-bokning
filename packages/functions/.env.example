# Stripe Webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=your_token_here
TELEGRAM_BOT_TOKEN=your_bot_token_here

# SMTP Configuration (for outgoing emails)
# Note: SMTP via send.one.com is the ONLY supported email provider
# In production, password is fetched from Secret Manager using SMTP_SECRET_NAME
EMAIL_SMTP_SERVER=send.one.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=info@stallbokning.se
EMAIL_SMTP_PASSWORD=your_smtp_password_here
EMAIL_SMTP_SECURE=false

# Secret Manager Configuration (for production)
# GCP Project Number (required for Secret Manager access)
GCP_PROJECT_NUMBER=your_project_number_here
# SMTP Secret name in Secret Manager (e.g., dev-smtp-password, staging-smtp-password, prod-smtp-password)
SMTP_SECRET_NAME=dev-smtp-password

# Environment
ENVIRONMENT=development
