{
  "name": "stall-bokning",
  "version": "0.1.0",
  "private": true,
  "description": "Stable booking and shift management system",
  "scripts": {
    "emulator:start": "firebase emulators:start --only firestore,auth --import=./firebase-emulator-data --export-on-exit=./firebase-emulator-data",
    "emulator:stop": "pkill -f 'firebase emulators'",
    "emulator:restart": "npm run emulator:stop && sleep 2 && npm run emulator:start",
    "emulator:export": "firebase emulators:export ./firebase-emulator-data",
    "emulator:clear": "rm -rf ./firebase-emulator-data && echo 'Emulator data cleared'",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev:all": "concurrently \"npm run emulator:start\" \"npm run dev:frontend\"",
    "build:frontend": "cd packages/frontend && npm run build",
    "migrate:invitations": "tsx scripts/migrate-invitations.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
